{
    "name": "simpod/graphql-utils",
    "description": "GraphQL Utils for graphql-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2||^8.0",
        "thecodingmachine/safe": "^0.1.11",
        "webonyx/graphql-php": "^0.12||^0.13"
    },
    "require-dev": {
        "doctrine/coding-standard": "^5.0 || ^6.0",
        "phpstan/phpstan": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^8.0",
        "thecodingmachine/phpstan-safe-rule": "^0.1.2"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\Tests\\": "tests/"
        }
    }
}
