{
    "name": "simpod/graphql-utils",
    "description": "GraphQL Utils for graphql-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.3||^8.0",
        "thecodingmachine/safe": "^1.0.2",
        "webonyx/graphql-php": "^0.12||^0.13"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0",
        "phpstan/phpstan": "0.12.11",
        "phpstan/phpstan-phpunit": "0.12.6",
        "phpstan/phpstan-strict-rules": "0.12.2",
        "phpunit/phpunit": "^9.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\Tests\\": "tests/"
        }
    }
}
