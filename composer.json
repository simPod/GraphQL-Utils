{
    "name": "simpod/graphql-utils",
    "description": "GraphQL Utils for graphql-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "thecodingmachine/safe": "^2",
        "webonyx/graphql-php": "^15.4"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "infection/infection": "^0.27.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpunit/phpunit": "^10.1",
        "psalm/plugin-phpunit": "^0.19.0",
        "roave/infection-static-analysis-plugin": "^1.31",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLUtils\\Tests\\": "tests/"
        }
    }
}
